<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registrarse"
    android:background="@drawable/img_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_registrarse">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo1"
        android:text="Crear Usuario"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtitulo1"
        android:text="Ingrese los siguientes datos:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/Titulo1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.1"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/Edittext_Nombre"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/subtitulo1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.25"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/Edittext_Apellido"
        android:hint="Apellido"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/Edittext_Nombre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.25"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/Edittext_ID"
        android:hint="Número de identificación"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/Edittext_Apellido"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.25"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/Edittext_correo"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/Edittext_ID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.25"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/Edittext_Usuario"
        android:hint="Usuario"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/Edittext_correo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.25"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/Edittext_Contraseña"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/Edittext_Usuario"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.25"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/Edittext_Contraseñaconf"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/Edittext_Contraseña"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.25"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_volver"
        android:text="Atras"
        app:layout_constraintTop_toBottomOf="@id/Edittext_Contraseñaconf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_registrar"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bordes_botones"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_registrar"
        android:text="Registrar"
        app:layout_constraintTop_toBottomOf="@id/Edittext_Contraseñaconf"
        app:layout_constraintLeft_toRightOf="@id/btn_volver"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bordes_botones"
        />





</androidx.constraintlayout.widget.ConstraintLayout>